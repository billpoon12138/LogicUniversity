<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Text1"
        android:id="@+id/text1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Needed:"
        android:id="@+id/text2"
        android:layout_below="@+id/text1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Text3"
        android:id="@+id/text3"
        android:layout_alignTop="@+id/text2"
        android:layout_toRightOf="@+id/text2"
        android:layout_toEndOf="@+id/text2"
        android:layout_marginLeft="10dp"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Actual:"
        android:id="@+id/text4"
        android:layout_alignTop="@+id/text3"
        android:layout_toRightOf="@+id/text3"
        android:layout_toEndOf="@+id/text3"
        android:layout_marginLeft="10dp"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Text5"
        android:id="@+id/text5"
        android:layout_alignTop="@+id/text4"
        android:layout_toRightOf="@+id/text4"
        android:layout_toEndOf="@+id/text4"
        android:layout_marginLeft="10dp"
        android:textColor="#FFFFFF"
        />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/checkBox1"
        android:onClick="onCheckboxClicked"
        android:layout_alignTop="@+id/text5"
        android:layout_toRightOf="@+id/text5"
        android:layout_alignBottom="@+id/text5"
        android:buttonTint="#FFFFFF"
        />

        <!--android:layout_alignTop="@+id/text5"
        android:layout_toRightOf="@+id/text5"
        android:layout_toEndOf="@+id/text5"
        android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentBottom="true"
        android:layout_marginLeft="23dp"
        /> -->



</RelativeLayout>