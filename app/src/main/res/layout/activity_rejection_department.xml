<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.student.logicuniversity.RejectionDepartment">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_alignParentTop="true"
    android:layout_alignLeft="@android:id/list"
    android:layout_alignStart="@android:id/list"
    android:layout_marginTop="260dp"
    android:id="@+id/linearLayout">

    <ListView
        android:id="@+id/android:list"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </ListView>

</LinearLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="REJECTION"
    android:id="@+id/textView2"
    android:textSize="21sp"
    android:background="#3F51B5"
    android:textColor="#FFFFFF"
    android:padding="13dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Department:"
    android:id="@+id/textView3"
    android:layout_below="@+id/textView2"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="15dp"

    />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/editText"
    android:text="English"
    android:layout_marginLeft="23dp"

    android:layout_alignBottom="@+id/textView3"
    android:layout_toEndOf="@+id/textView3" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Item:"
    android:id="@+id/textView5"
    android:layout_marginTop="17dp"
    android:layout_marginLeft="15dp"
    android:layout_below="@+id/editText"
 />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/editText3"
    android:text="Pencil"
    android:layout_below="@+id/editText"
    android:layout_alignLeft="@+id/editText"
    android:layout_alignStart="@+id/editText" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Quantity:"
    android:id="@+id/textView7"
    android:layout_below="@+id/editText3"
    android:layout_marginLeft="15dp"

    android:layout_marginTop="15dp" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/editText5"
    android:text="2"
    android:layout_below="@+id/editText3"
    android:layout_alignStart="@+id/editText3" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Reason of rejection:"
    android:id="@+id/textView8"
    android:layout_marginTop="45dp"
    android:layout_below="@+id/textView7"
    android:layout_marginLeft="15dp"
 />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Cancel"
    android:id="@+id/buttonCancel"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="15dp"
    android:layout_marginBottom="25dp" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Submit"
    android:id="@+id/buttonSubmit"
    android:layout_alignBottom="@+id/buttonCancel"
    android:layout_marginRight="15dp"
    android:layout_alignParentEnd="true"
 />

</RelativeLayout>

